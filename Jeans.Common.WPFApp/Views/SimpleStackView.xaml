    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0">
            <Button x:Name="btnPrev"
                    Margin="10,10,10,3"
                    Content="Prev" />
            <Button x:Name="btnNext"
                    Margin="10,3,10,3"
                    Content="Next" />
            <CheckBox x:Name="chkLongText"
                      Margin="10"
                      Content="Show Long Text"
                      Checked="chkLongText_Checked"
                      Unchecked="chkLongText_Unchecked" />
        </StackPanel>

        <Button Grid.Row="1"
                Grid.Column="0"
                Margin="10,3,10,10"
                Content="Close" />

        <TextBox Grid.Row="0"
                 Grid.Column="1"
                 Margin="0,10,10,10"
                 TextWrapping="WrapWithOverflow"
                 Text="This is a test that demonstrates how buttons adapt themselves to fit the context they contain when they aren't explicitly sized.                   This behavior makes localization much easier." />

    </Grid>

